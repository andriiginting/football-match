<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_team"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_standard_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_10"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_team_logo"
        android:layout_width="@dimen/image_size_50"
        android:layout_height="@dimen/image_size_50"
        android:src="@drawable/img_barca"/>

    <TextView
        android:id="@+id/text_teams_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/team_name_hint"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_standard_10"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>